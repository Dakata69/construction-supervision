[Unit]
Description=Gunicorn daemon for Construction Supervision
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/construction-supervision/backend
ExecStart=/var/www/construction-supervision/backend/env/bin/gunicorn \
    --access-logfile - \
    --workers 3 \
    --bind unix:/run/gunicorn.sock \
    config.wsgi:application

[Install]
WantedBy=multi-user.target
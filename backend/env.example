DJANGO_SECRET_KEY=change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# MySQL connection string (uncomment and edit to enable)
# Format: mysql://USER:PASSWORD@HOST:PORT/DB_NAME?conn_max_age=60
# For local MySQL using default port 3306:
# DATABASE_URL=mysql://root:password@127.0.0.1:3306/construction_supervision?conn_max_age=60

# Optional: Frontend URL for CORS in production
# FRONTEND_URL=https://your-frontend.example.com

# Web Push VAPID keys (required for push notifications)
# Generate with: openssl rand -base64 32 (or use web-push tools)
# Use proper VAPID keypair generation in production. Example placeholders:
# VAPID_PUBLIC_KEY=YOUR_PUBLIC_KEY_BASE64URL
# VAPID_PRIVATE_KEY=YOUR_PRIVATE_KEY_BASE64URL
# VAPID_EMAIL=mailto:admin@example.com
